.showcategories
    category-block()

    .categories
        background: none

        .ul--0
            flex-flow: row wrap

        &--justify
            padding: 10px 0

            .li--0
                padding: 3px

                &.removed
                    position: static !important

    &__header
        padding: 20px 0
        text-align: center

    &__title
        color: var(--black)
        font-weight: regular
        font-size: 21px

        .ico
            color: color2_bg

    &__descriptions
        color: var(--black)
        font-weight: regular
        font-style: normal
        font-size: 14px
        opacity: .7

        strong
            font-weight: bold !important

    &__main
        background: var(--gray)

    &__label
        color: var(--black)
        font-weight: regular
        font-size: 20px

        span, strong, small
            display: block
            line-height: 1.2

        small
            font-size: 14px
            opacity: .7

    @media (min-width: 993px)
        &__main
            display: flex
            align-items: center
            padding: 10px 0
            box-shadow: 800px 0 0 var(--gray), -800px 0 0 var(--gray)

        &__label
            flex: 0 1 170px

        &__list
            flex: 1
            min-width: 0

    @media (max-width: 992px)
        box-shadow: 200px 0 0 var(--gray), -200px 0 0 var(--gray)

        &__label
            padding-top: 20px
            text-align: center

.showcategories .categories__all
    .a--0 > span
        a
            display: block

            span
                color: var(--black-light)

            .z-more
                fill: color2_bg

    .box--1
        display: none !important