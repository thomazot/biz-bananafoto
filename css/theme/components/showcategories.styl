.showcategories
    category-block()

    .categories
        background: none

    &__header
        text-align: center
        padding: 20px 0

    &__title
        font-size: 21px
        font-weight: regular
        color: var(--black)

        .ico
            color: color2_bg

    &__descriptions
        font-size: 14px
        font-weight: regular
        font-style: italic
        color: var(--black)
        opacity: 0.7

    &__main
        background: var(--gray)

    &__label
        font-size: 20px
        font-weight: regular
        color: var(--black)

        span, strong, small
            display: block
            line-height: 1.2

        small
            font-size: 14px
            opacity: 0.7

    @media (min-width: 993px)
        &__main
            box-shadow: 800px 0 0 var(--gray), -800px 0 0 var(--gray)
            display: flex
            padding: 10px 0
            align-items: center

        &__label
            flex: 0 1 170px

        &__list
            flex: 1
            min-width: 0

    @media (max-width: 992px)
        box-shadow: 200px 0 0 var(--gray), -200px 0 0 var(--gray)

        &__label
            padding-top: 20px
            text-align: center