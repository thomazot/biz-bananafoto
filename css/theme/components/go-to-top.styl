.go-to-top
    position: fixed
    bottom: 200px
    right: 100px
    width: 50px
    height: 50px
    display: flex
    justify-content: center
    align-items: center
    background: var(--gray-dark)
    color: var(--black)
    border-radius: 50%
    transition: all 0.2s ease
    opacity: 0
    visibility: hidden
    z-index: 300

    .show-go-top &
        opacity: 1
        visibility: visible

    .ico
        transform: rotate(-90deg)

    @media (max-width: viewport)
        right: 20px