.filters
    @media (max-width: 992px)
        .link
            color: #fff

        &__filter
            .count
                color: #fff

        &__filtered
            display: none

    @media (min-width: 993px)
        display: flex
        flex-flow: column nowrap
        padding: 20px 0 0
        width: 100%

        > .title
            display: none

        &__list
            order: -1

        &__name
            display: flex
            justify-content: center
            align-items: center
            margin: 0
            padding: 0 20px
            height: 48px
            border: solid 1px var(--select)
            border-radius: 4px
            background: none
            color: var(--black)
            text-transform: none
            font-weight: medium
            font-size: 13px
            line-height: 1

            &:after
                icon('\f054')
                margin-left: 5px
                font-size: 11px
                transform: rotate(90deg)

        &__filter
            position: relative
            margin: 0
            padding: 10px 8px 10px 0
            background: none
            box-shadow: none

            .a--0, .a-filter
                &, .count
                    color: var(--black)
                    font-weight: regular
                    font-size: 12px

                &:hover
                    font-weight: semibold

            > ul, > ol, .filters__swatches, .the-filters
                position: absolute
                top: cac(100% - 10px)
                left: 50%
                padding: 20px
                min-width: 200px
                border: solid 1px #e3e7ee
                border-radius: 2px
                background: #fff
                text-align: left
                opacity: 0
                transform: translateX(-50%)
                pointer-events: none

            &:hover
                box-shadow: none

                .filters__name
                    background: none
                    cursor: pointer

                ul, ol, .filters__swatches, .the-filters
                    opacity: 1
                    pointer-events: auto

        &__list
            display: flex
            align-items: center

        &__filtered
            margin-top: 25px
            margin-bottom: 30px

            .ul--0
                display: flex

            .li--0
                padding-left: 0
                border: solid 1px #707070
                border-radius: 38px
                font-weight: regular
                font-size: 14px

                + .li--0
                    margin-left: 20px

            .btn--close
                display: flex
                justify-content: center
                align-items: center
                padding: 0
                width: 38px
                height: 38px
                background: none

            .btn--close
                color: #707070

                &:before
                    display: none

                .ico
                    width: 10px
                    height: 10px

            .filtered__name, .subtitle, .filtered__clear
                display: none

            .filtered__value
                color: #707070