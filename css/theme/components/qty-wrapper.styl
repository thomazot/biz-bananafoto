.qty-wrapper
    border: solid 1px var(--select)
    border-radius: 3px
    background: #fff

    input
        width: 100%
        height: 58px
        border: 0 !important
        background: none !important
        box-shadow: none !important
        color: var(--black)
        font-weight: regular
        font-size: 14px

    .input-box
        padding: 0 25px

    .bt-box
        position: static
        border-radius: 0
        background: none
        box-shadow: none
        transform: none

    .bt.plus, .bt.less
        position: absolute
        top: 0
        display: flex
        justify-content: center
        align-items: center
        width: 30px
        height: 100%
        border-radius: 0
        background: none
        box-shadow: 0 0 0 1px var(--select)
        color: var(--black)
        text-indent: 0
        font-weight: semibold
        font-size: 18px

        .ico
            width: 17px
            height: 17px

        &:before
            display: none

        span
            display: none

    .plus
        right: 0

    .less
        left: 0