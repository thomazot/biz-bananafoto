#catalog-categories
    background: #e5e5e5
    padding: 20px 0

    .owl
        &-wrapper-outer
            padding: 10px 0
            margin: -10px 0

        &-prev, &-next
            &:hover
                background: none

    .ul--0
        padding: 0 40px

    .li--0
        padding: 5px
        width: 100%

    .a--0
        width: 100%
        display: flex
        justify-content: center
        align-items: center
        flex-flow: column nowrap
        color: var(--black-light)
        font-size: 13px
        height: auto
        background: #fff
        border-radius: 4px
        padding: 15px
        min-height: 140px

        img
            margin-right: 0

        span
            display: block
            flex: 0
