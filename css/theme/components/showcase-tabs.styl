.showcase-tabs
    .owl-wrapper-outer
        margin: -10px 0
        padding: 10px 0

    &__header
        margin-bottom: 20px
        border-bottom: solid 1px var(--gray-dark)

        .owl-carousel .owl-stage
            display: flex

        .owl-item
            width: max-content !important

            +.owl-item
                margin-left: 40px

        &.carousel-actived
            padding: 0 40px

        .owl
            &-prev, &-next
                top: 50%
                margin-top: 5px
                transform: translateY(-50%)

                .ico
                    width: 10px
                    height: 10px
                    color: var(--black)

            &-prev
                .ico
                    transform: rotate(180deg)

        a
            position: relative
            display: block
            margin-bottom: -1px
            padding: 15px 0
            color: var(--black)
            text-align: center
            font-weight: regular
            font-size: 18px
            line-height: 1.2

            &:after
                position: absolute
                bottom: 0
                left: 50%
                z-index: 10
                display: block
                margin-bottom: -4px
                width: 10px
                height: 10px
                border-radius: 50%
                background: color2_bg
                content: ''
                opacity: 0
                transform: translateX(-50%)

            &:before
                position: absolute
                bottom: 2px
                z-index: 15
                width: 100%
                height: 5px
                background: #fff
                content: ''

            &.actived
                box-shadow: inset 0 -2px 0 color2_bg
                font-weight: bold

                &:after
                    opacity: 1

    &__main
        > div:not(.actived)
            display: none