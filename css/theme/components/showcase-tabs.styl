.showcase-tabs
    .owl-wrapper-outer
        padding: 10px 0
        margin: -10px 0

    &__header
        border-bottom: solid 1px var(--gray-dark)
        margin-bottom: 20px

        &.carousel-actived
            padding: 0 40px

        .owl
            &-prev, &-next
                margin-top: 5px
                top: 50%
                transform: translateY(-50%)

                .ico
                    width: 10px
                    height: 10px
                    color: var(--black)

            &-prev
                .ico
                    transform: rotate(180deg)

        a
            font-size: 18px
            font-weight: regular
            color: var(--black)
            display: block
            padding: 15px 0
            line-height: 1.2
            position: relative
            margin-bottom: -1px
            text-align: center

            &:after
                content: ''
                width: 10px
                height: 10px
                background: color2_bg
                position: absolute
                left: 50%
                bottom: 0
                transform: translateX(-50%)
                border-radius: 50%
                z-index: 10
                display: block
                margin-bottom: -4px
                opacity: 0

            &:before
                content: ''
                bottom: 2px
                width: 100%
                position: absolute
                height: 5px
                z-index: 15
                background: #fff

            &.actived
                font-weight: bold
                box-shadow: inset 0 -2px 0 color2_bg

                &:after
                    opacity: 1

    &__main
        > div:not(.actived)
            display: none