.toolbar
    padding: 30px 0

    .amount, .limiter
        display: none

    .sorter
        &:before
            display: none

    .sort-by
        position: relative
        width: 100%
        height: 48px
        border: solid 1px var(--select)
        border-radius: 4px
        background: none

        &:after
            icon('\f054')
            position: absolute
            top: 50%
            right: 20px
            font-size: 10px
            transform: translateY(-50%) rotate(90deg)

        label
            display: none

        select
            padding: 0 15px
            width: 100%
            height: 100%
            border: 0
            background: none
            box-shadow: none
            color: var(--black)
            text-transform: none
            font-size: 11px
            appearance: none

    @media (min-width: 993px)
        position: static

        &:before
            position: absolute
            left: 0
            margin-top: -18px
            width: 100%
            height: 75px
            background: none
            content: ''
            border-bottom: solid 1px var(--gray-dark)