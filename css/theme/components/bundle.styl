.bundle
    margin-bottom: 0

    &:before, .qty-holder
        display: none

    &__option
        margin: 0
        padding: 0
        box-shadow: none
        text-align: left

        label
            display: flex
            justify-content: space-between
            align-items: center
            width: 100%

        .ico
            display: block
            margin-left: 20px
            width: 14px
            height: 14px

        &.on
            .ico
                transform: rotate(180deg)

        &:hover
            box-shadow: none

    &__caption
        display: flex
        justify-content: flex-start
        align-items: center
        padding: 10px 30px
        min-height: 55px
        border-radius: 3px
        background: #f2f2f2
        color: #444444
        font-weight: regular
        font-size: 14px
        opacity: 1

    &__content
        display: none
        text-align: left

        .on &
            display: block
            margin-bottom: 20px

    .options-bundle-images
        display: none !important

    .options-list li
        color: var(--link)
        font-weight: semibold
        font-size: 14px

        input
            display: none

            &:checked + .label label
                border-color: var(--blue)

                &:before
                    background: var(--blue)
                    box-shadow: inset 0 0 0 5px var(--white)

        label
            display: flex
            justify-content: flex-start
            align-items: center
            padding: 10px 30px
            min-height: 55px
            border: solid 1px #dddddd
            border-radius: 3px

            &:before
                flex: 0 0 26px
                margin-right: 15px
                width: 26px
                height: 26px
                border: solid 1px #dddddd
                border-radius: 50%
                content: ''

        .price-notice
            flex: 1 1 200px
            min-width: 0
            color: var(--blue)
            text-align: right
            font-weight: semibold
            font-size: 12px