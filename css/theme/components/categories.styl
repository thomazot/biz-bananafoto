
.categories
    &__show
        .ico
            width: 24px
            height: 24px

        &:before
            display: none

    &__hide
        color: color1_bg
        background: color2_bg

    @media (max-width: 992px)
        background: color2_bg

        .parent
            position: relative

            > ul
                display: none

            &:after
                content: ''

            > a
                display: flex
                min-height: 48px
                justify-content: flex-start
                align-items: center

            &:after
                icon('\f054')
                position: absolute
                top: 0
                right: 0
                z-index: 10
                display: flex
                justify-content: center
                align-items: center
                width: 48px
                height: 48px
                font-size: 20px
                background: rgba(255, 255, 255, 0.1)
                transition: all 0.2s ease
                color: color1_bg

            &.on
                &:after
                    transform: rotate(90deg)

                > ul
                    display: block

        .all-li--0
            padding-bottom: 0

    @media (min-width: 993px)
        .menu__categories &
            opacity: 0
            visibility: hidden
            margin-bottom: 0 !important
            position: absolute
            left: 0
            top: 100%
            background: var(--white)

            .ul--0
                position: static
                background: var(--gray)
                width: viewport
                max-width: calc(100% - 32px)
                box-shadow: 800px 0 0 var(--gray), -800px 0 0 var(--gray)
                align-items: stretch
                margin: 0 auto

            .li--0
                &:after
                    content: ''
                    position: fixed
                    top: 248px
                    left: 0
                    width: 100%
                    height: 100vh
                    background: rgba(0, 0, 0, 0.5)
                    z-index: 10
                    visibility: hidden

                &:hover:after
                    visibility: visible

        .menu__categories:hover &
            opacity: 1
            visibility: visible