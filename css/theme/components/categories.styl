
.categories
    &__show
        width: 44px
        height: 44px
        border: solid 1px color1_bg
        border-radius: 0
        background: none

        .ico
            width: 24px
            height: 24px
            fill: color1_bg

        &:before
            display: none

    &__hide
        background: color1_bg
        color: color2_bg

    .header-container &
        .all-a--1, .all-a--2, .a--1, .a--2
            img
                display: none

    @media (max-width: 992px)
        background: #692212

        .parent
            position: relative

            > ul
                display: none

            &:after
                content: ''

            > a
                display: flex
                justify-content: flex-start
                align-items: center
                min-height: 48px

            &:after
                icon('\f054')

                position: absolute
                top: 0
                right: 0
                z-index: 10
                display: flex
                justify-content: center
                align-items: center
                width: 48px
                height: 48px
                background: rgba(255, 255, 255, .1)
                color: color2_bg
                font-size: 20px
                transition: all .2s ease

            &.on
                &:after
                    transform: rotate(90deg)

                > ul
                    display: block

        .all-li--0
            padding-bottom: 0

    @media (min-width: 993px)
        .menu__categories &
            position: absolute
            top: 100%
            left: 0
            visibility: hidden
            margin-bottom: 0 !important
            background: var(--white)
            opacity: 0

            .ul--0
                position: static
                align-items: stretch
                margin: 0 auto
                max-width: calc(100% - 32px)
                width: viewport
                background: var(--gray)
                box-shadow: 800px 0 0 var(--gray), -800px 0 0 var(--gray)

            .li--0
                &:after
                    position: fixed
                    top: 248px
                    left: 0
                    z-index: 10
                    visibility: hidden
                    width: 100%
                    height: 100vh
                    background: rgba(0, 0, 0, .5)
                    content: ''

                &:hover:after
                    visibility: visible

        .menu__categories:hover &
            visibility: visible
            opacity: 1