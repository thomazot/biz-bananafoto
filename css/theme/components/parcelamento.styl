.parcelamento
    li
        border: 0

    .parcela
        &, .num, .valor
            color: #aaa
            font-weight: regular
            font-size: 14px

        @media (min-width: 993px)
            .num
                display: inline-block
                min-width: 140px

    .desconto
        padding: 0 20px
        color: var(--green)
        font-size: 14px

        .label
            display: none

    .s-juros
        background: none
        color: #aaa
        font-weight: regular
        font-style: normal
        font-size: 14px

    ul
        @media (min-width: 993px)
            width: 60%