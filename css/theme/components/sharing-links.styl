.sharing-links
    margin: 20px 0
    --gray: #ccc

    .list
        justify-content: center

        &:before
            display: none

    [class *=-share] a
        background: none

        .ico
            width: 20px
            height: 20px
            fill: var(--gray)

    .fb-share a:hover .ico
        fill: var(--facebook)

    .tt-share a:hover .ico
        fill: var(--twitter)

    .pt-share a:hover .ico
        fill: var(--pinterest)

    .tb-share a:hover .ico
        fill: var(--thumblr)

    .lk-share a:hover .ico
        fill: var(--linkedin)
