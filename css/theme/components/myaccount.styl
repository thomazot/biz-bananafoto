.myaccount
    .header &
        height: auto

    &__forgot
        display: none

    &__header
        display: flex
        align-items: center
        max-width: 125px
        color: color1_bg
        font-weight: semibold
        font-size: 13px

        a
            text-decoration: underline

        div
            padding-right: 5px
            line-height: 1.1

        .ico
            flex: 0 0 25px
            width: 25px
            height: 27px

    &__content
        flex-flow: column nowrap
        box-shadow: 0 0 10px rgba(0, 0, 0, .2)

        .title
            display: none

        &:after
            position: absolute
            top: -9px
            right: 40px
            width: 20px
            height: 20px
            border-radius: 2px
            background: #fff
            content: ''
            transform: rotate(-45deg)

        &:before
            position: absolute
            top: -20px
            left: 0
            width: 100%
            height: 20px
            background: rgba(0, 0, 0, 0)
            content: ''

        .drop--top &
            top: calc(100% + 20px)

    &__login
        order: -1
        margin-bottom: 0

    &__social
        position: relative

        &:after
            position: absolute
            top: 20px
            width: 100%
            height: 1px
            background: var(--select)
            content: ''

        &:before
            position: relative
            z-index: 5
            display: block
            height: 40px
            color: var(--black-light)
            content: 'ou'
            text-align: center
            line-height: 40px

        .socialconnect
            &:before
                position: absolute
                top: 0
                left: 50%
                z-index: 3
                display: block
                margin: 0
                width: 40px
                height: 40px
                border: 0
                background: #fff
                content: ''
                transform: translateX(-50%)

    &__register
        display: flex
        flex-flow: column nowrap
        margin-top: 0
        padding-top: 0
        border: 0

        &-btn
            order: -1
            box-shadow: none
            color: var(--black-light)
            font-weight: regular
            font-size: 14px

            &:hover
                background: none
                color: var(--black-light)

        .std
            margin-bottom: 0
            padding: 10px 0 0
            border-top: solid 1px var(--select)

            div
                display: flex

                a
                    flex: 0 0 50%
                    color: var(--black-light)
                    text-align: center
                    font-weight: 400
                    font-size: 13px

                    + a
                        border-left: solid 1px var(--select)

    @media (max-width: 992px)
        height: auto

        .header &
            display: none

        &__header
            display: flex
            justify-content: center
            width: 50px
            height: 50px
            aling-items: center

            div
                display: none

    @media (min-width: 993px)
        .header &
            margin-left: 40px

        &:hover .myaccount__content
            display: flex


.myaccount
    .categories &
        display: none 

        &__header 
            width: 100%
            max-width: none 
            padding: 0 15px
            
            > div 
                display: block
                flex: 1
                min-width: 0
                text-align: left

                a
                    display: inline

            a 
                order: -1

        @media (max-width: 992px)
            display: block
            background: color2_bg
