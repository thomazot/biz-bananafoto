.price-box
    .old-price, .price-to
        .products &
            display: none

    .regular-price, .special-price, .price-from
        .label
            display: block
            color: var(--black-light)
            font-size: 14px
            line-height: 1.2

            &:before
                content: 'A partir de'

            span
                display: none

        .price span
            color: var(--blue)
            font-weight: semibold
            font-size: 22px
            line-height: 1.3