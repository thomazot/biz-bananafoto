.owl
    &-prev
        right: auto
        left: 0

    &-next
        right: 0
        left: auto

    &-prev, &-next
        display: flex
        justify-content: center
        align-items: center
        padding: 0
        width: 33px
        height: 33px
        border-radius: 50%
        background: none
        box-shadow: none
        color: var(--dots)
        text-indent: 0

        &:hover
            background: var(--white)
            color: var(--black-light)

        .ico
            width: 20px
            height: 33px

        &:before
            display: none

@media (min-width: viewport + 220)
    .owl
        .products &-next
            right: -40px

        .products &-prev
            left: -40px

        .products &-pagination
            display: none