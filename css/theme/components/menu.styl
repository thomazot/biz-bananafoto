.menu
    position: relative

    &__title
        font-size: 16px
        font-weight: bold
        color: color1_bg
        height: 50px
        display: flex
        justify-content: center
        align-items: center

        .ico
            width: 17px
            height: 12px
            margin-right: 10px

    @media (max-width: 992px)
        order: -1
        width: 44px
        margin-left: 16px

        &__configs
            display: none

        &__title
            display: none

    @media (min-width: 993px)
        category-block()
        background: #fff
        transition: all 0.2s ease-in-out
        z-index: 100

        .scrolling:not(.scrolling--up) &
            transform: translateY(-50px)

        &:before
            content: ''
            position: absolute
            top: 100%
            left: 0
            z-index: 10
            width: 100%
            height: 10px
            box-shadow: inset 0 4px 4px rgba(0, 0, 0, 0.05)

        &__container
            display: flex
            width: viewport
            max-width: calc(100% - 32px)
            margin: 0 auto

        &__configs
            flex: 1
            min-width: 0
