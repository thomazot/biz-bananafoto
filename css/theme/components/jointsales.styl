.jointsales
    --color: #444444

    .owl-wrapper-outer
        border: 0

    .old-price
        display: none

    .title--sm
        font-size: 13px
        color: var(--color)

    .more
        transform: none
        color: var(--black)
        padding: 0
        display: flex
        justify-content: center
        align-items: center

        &:before
            content: '+'
            font-size: 24px
            min-width: 36px
            height: 36px
            line-height: 1
            border: solid 1px #eaeaea
            border-radius: 50%
            background: #fff

    &__currentin
        box-shadow: none
        border-bottom: solid 1px #eaeaea
        text-align: center

    &__item
        + .jointsales__item
            position: relative

            &:before
                content: '+'
                font-size: 24px
                min-width: 36px
                height: 36px
                line-height: 1
                border: solid 1px #eaeaea
                border-radius: 50%
                background: #fff
                display: flex
                justify-content: center
                align-items: center
                position: absolute
                top: -20px
                left: 50%
                margin-left: -18px

    &__currentin, &__item
        .thumb
            width: 25px
            flex: 0 0 40%

    &__item, &__totals
        text-align: center

        .todos-juntos
            display: none

        .comprando-junto
            font-size: 0

            > .price
                &:before
                    font-size: 14px
                    font-weight: regular
                    color: var(--black-light)
                    content: 'Compre os 3 itens a partir de: '
                    display: block

                .price
                    font-size: 35px
                    font-weight: regular

        .economize
            font-size: 0
            background: none

            .price
                font-size: 14px
                font-weight: semibold
                color: var(--green)

                &:before
                    content: 'economize'
                    font-weight: regular
                    margin-right: 3px

        .price
            color: var(--blue)

    .btn-jointsales
        height: 48px
        display: flex
        justify-content: center
        align-items: center
        background: var(--green)
        border-radius: 48px
        font-size: 15px
        font-weight: semibold

    &__payments
        display: none

    @media (min-width: 569px)
        &__currentin
            display: block
            border-right: solid 1px #eaeaea
            border-bottom: 0

        &__currentin, &__item
            .thumb
                margin-right: 0
                width: 100%

        &__item
            + .jointsales__item
                &:before
                    top: 50%
                    margin-top: -18px
                    margin-right: 0
                    left: 0

    @media (max-width: 992px)
        &__title
            font-size: 14px
            font-weight: regular

    @media (min-width: 993px)
        &__title
            title()

            &:after
                content: 'no seu equipamento fotogr√°fico'
                margin-left: 5px

        &__content
            display: grid
            grid-template-areas: 'current items'
            grid-template-columns: 1fr 3fr

        &__current
            grid-area: current
            padding-bottom: 0

        &__items
            grid-area: items

        &__row
            padding: 0
            display: grid
            grid-template-areas: 'list totals' 'list action'
            grid-template-columns: 2fr 1fr

        &__list
            grid-area: list

        &__totals
            grid-area: totals
            border: solid 1px #dddddd
            border-bottom: 0
            padding: 20px
            border-radius: 20px 20px 0 0

        &__action
            grid-area: action
            align-self: start
            border: solid 1px #dddddd
            border-top: 0
            margin-top: 0
            padding-top: 0
            padding-bottom: 20px
            border-radius: 0 0 20px 20px

            .btn-jointsales
                margin: 0 auto