.socialconnect
    .header &
        &__google, &:after
            display: none

        &__facebook
            padding: 0
            width: 100%

            a
                justify-content: flex-start
                padding: 10px
                width: 100%
                height: auto
                border-radius: 3px
                background: var(--facebook)
                box-shadow: none

                &:after
                    flex: 1
                    padding-left: 10px
                    content: 'Entrar com Facebook'
                    text-align: center
                    font-weight: 300
                    font-size: 14px

                .ico
                    padding: 10px 0 0 10px
                    width: 35px
                    height: 35px
                    border-radius: 2px
                    background: #fff
                    fill: var(--facebook)