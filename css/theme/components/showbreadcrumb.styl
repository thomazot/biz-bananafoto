.showbreadcrumb
    margin-top: 50px
    line-height: 1

    &__item
        display: inline-block
        vertical-align: middle

        &, a
            color: var(--black-light)
            font-weight: 300
            font-size: 22px

        &:first-child
            &, a
                color: var(--blue)
                font-style: normal
                font-size: 22px

    &__sep
        display: inline-block
        padding: 0 10px
        color: var(--blue)
        vertical-align: middle

        .ico
            width: 11px
            height: 11px

    @media (max-width: 992px)
        text-align: center

        &__item
            max-width: calc(100% - 35px)

            &:last-child
                display: block
                padding-top: 10px

    @media (min-width: 993px)
        display: flex
        justify-content: flex-start
        align-items: flex-end