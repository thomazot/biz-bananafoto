.related
    &__title
        display: none
        font-weight: regular
        font-size: 14px

        span
            font-weight: semibold

            &:after
                content: 'também se interessou por'
                font-weight: regular

        &.on
            display: flex

    &__subtitle, &__add-checkbox
        display: none

    @media (min-width: 569px)
        &__title
            title()

            &:after
                padding: 1.25rem 0
                padding-left: 5px
                content: 'também se interessou por'
                font-weight: regular