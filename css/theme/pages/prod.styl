.zoomContainer
    display: none !important

.prod
    &__img
        position: relative

        .product-image-gallery
            box-shadow: none

        .product-image-container
            .prev, .next
                position: absolute
                top: 50%
                display: flex
                justify-content: center
                align-items: center
                padding: 0
                width: 34px
                height: 60px
                background: #fff
                box-shadow: 0 0 10px rgba(0, 0, 0, .1)
                color: var(--black)
                transform: translateY(-50%)

                &:hover .ico
                    fill: var(--black) !important

            .prev
                left: 0

            .next
                right: 0

        .product-image-thumbs
            justify-content: center
            align-items: center

            li:not(.video)
                flex: 0 0 auto
                min-width: 0
                min-height: 0

            .thumb-link
                flex: 0 0 auto
                width: 8px
                height: 8px
                border-radius: 50%
                background: var(--dots)
                box-shadow: none

                img
                    display: none

                &.on
                    width: 30px
                    border-radius: 8px
                    background: color2_bg

        .product-image-thumbs
            .video
                position: absolute
                top: 0
                right: 0
                display: flex
                justify-content: center
                align-items: center
                padding: 0
                min-width: 0
                min-height: 0
                width: 50px
                height: 50px
                border-radius: 50%
                box-shadow: 0 0 10px rgba(0, 0, 0, .1)

                .img
                    display: none

                .play
                    display: flex
                    justify-content: center
                    align-items: center
                    width: 26px
                    height: 26px
                    border-radius: 50%
                    background: var(--youtube)

                    .ico
                        position: static
                        width: 10px
                        height: 10px

            .video-thumb
                flex: 0 0 auto
                background: #fff
                background-image: none !important
                box-shadow: none

    &__shop
        text-align: center
        --gray: #878787
        --gray-light: #7d7d7d

        .configurable-swatch-list
            justify-content: center

        .old-price
            display: none

        .regular-price, .special-price, .price-as-configured
            .label
                display: none

            .price span
                color: var(--blue)
                font-weight: regular
                font-size: 35px

        .qty-wrapper
            display: none !important

        .add-to-cart-btn
            display: flex
            justify-content: center
            align-items: center
            margin: 0 auto
            padding: 0
            max-width: 100%
            width: 230px
            height: 50px
            border-radius: 50px
            background: var(--green)
            box-shadow: none
            font-weight: bold
            font-size: 15px
            line-height: 50px

            span
                display: inline
                line-height: 1

    &__tags
        > div
            display: flex

        .prolabel
            position: static

            + .prolabel
                margin-left: 5px

    &__review
        display: flex
        flex: 1
        justify-content: center
        min-width: 0

        .product-rate
            > a
                display: none !important

            .rating-box:before, .rating-box .rating:before
                font-size: 15px

            .rating:before
                color: color2_bg

            .amount .qtd
                display: inline-block
                margin-top: -2px
                margin-left: 5px
                color: #878787
                font-size: 13px

    &__head
        display: flex
        justify-content: flex-start
        align-items: center
        margin-bottom: 20px

    &__name h1
        margin-bottom: 5px
        color: var(--black)
        font-weight: regular
        font-size: 25px
        line-height: 1.3

    &__sku
        display: block
        margin-bottom: 20px
        color: var(--gray)
        text-transform: uppercase
        font-weight: regular
        font-size: 12px

    &__short-description
        margin-bottom: 20px
        text-align: center
        font-size: 12px
        line-height: 1.2

    &__price-tabs
        .extra
            flex: 1
            margin-top: -4px
            padding-left: 20px
            min-width: 0
            color: var(--green)
            text-align: left
            font-weight: regular
            font-size: 14px

        .price-box-avista
            display: block
            margin-bottom: 0
            color: #848484
            font-weight: regular
            font-size: 12px

            &:before
                display: inline-block
                margin-right: 5px
                content: url(boleto)
                vertical-align: middle

            .price span
                font-weight: semibold

            .label
                display: none

            &:after
                content: ' à vista no boleto bancário'

        .price-box-parcelado
            margin-bottom: 0
            color: #848484
            text-align: left
            font-weight: regular
            font-size: 12px

            .preco-parcelado:before
                display: inline-block
                margin-right: 5px
                content: url(pays)
                vertical-align: middle

            .num, .value
                span
                    color: #848484
                    font-weight: semibold

    &__price-tab
        display: flex
        justify-content: space-between
        align-items: center
        padding: 15px 0
        border-top: solid 1px #dddddd

        a
            color: var(--black)
            font-weight: regular
            font-size: 12px

        &--card
            .card
                display: flex
                justify-content: flex-start
                align-items: center

                &:before
                    display: inline-block
                    margin-right: 5px
                    content: url(card)
                    vertical-align: middle

            .price-box-avista
                &:before
                    margin-right: 0
                    content: '1x de'
                    font-weight: semibold

                &:after
                    content: ' no cartão de crédito'

    &__categories
        padding: 20px
        background: #f9f9f9
        color: #686c6f
        text-align: center
        font-weight: regular
        font-size: 14px

        .thumb
            display: none

        ul
            display: flex
            flex-flow: row wrap
            justify-content: center
            align-items: center
            padding: 10px 0 0
            color: var(--blue)
            font-weight: regular
            font-size: 13px

        a
            padding: 5px 10px
            color: var(--blue)
            font-weight: regular
            font-size: 13px

            &:hover
                color: color2_bg

        li + li:before
            content: '/'

@media (max-width: 568px)
    .prod
        &__shop
            .col1
                margin-bottom: 0

    .frete__title
        font-size: 14px

        .ico
            margin-left: 0

    .tabs
        &__tab
            &, &.on
                font-weight: regular
                font-size: 14px

    .reviews__title
        font-size: 14px

@media (min-width: 569px)
    .tabs
        &__tab
            position: relative
            margin: 0
            padding: 0
            border: 0
            border-bottom: solid 1px #dddddd
            color: var(--black)
            font-weight: regular
            font-size: 18px

            &.on
                top: 0
                box-shadow: inset 0 -5px 0 color2_bg
                font-weight: bold
                font-size: 18px

                &:after
                    opacity: 1

            &:first-child
                padding-right: 20px

            &:not(:first-child)
                padding: 0 20px

            &:not(:last-child)
                margin-right: 0

            &:nth-last-child(2)
                flex: 1
                min-width: 0

        &__content
            padding: 20px 0
            border: 0

@media (min-width: 993px)
    #product_addtocart_form
        flex-flow: row wrap

    .prod__header
        flex: 0 0 100%
        padding-bottom: 20px
        text-align: center

        .prod__review
            order: -1

        .prod__sku
            margin-bottom: 10px
            color: #878787
            font-size: 12px

    .prod__row
        display: flex
        justify-content: center
        align-items: center
        margin-bottom: 20px

        .add-to-cart
            margin: 0 20px

    .prod__img
        flex: 0 0 500px

        .product-image-gallery
            img
                width: 100%
                height: 100%
                object-fit: contain

    .frete
        padding: 15px
        background: #f3f5f5

        &__title
            display: none

        &__naosei
            color: #848484
            font-size: 12px
            line-height: 1.2

        &__content
            display: flex !important
            justify-content: space-around
            align-items: center

            &:before
                color: var(--blackz)
                content: 'Simular frete e prazos'
                font-weight: regular
                font-size: 14px

        &__form
            margin: 0 10px
            padding-right: 7px
            border: solid 1px #dddddd
            border-radius: 58px
            background: #fff

            label
                display: none

            .input-text
                height: 58px
                border: 0 !important
                background: none
                box-shadow: none

            .btn
                display: flex
                justify-content: center
                align-items: center
                padding: 0
                width: 47px
                height: 47px
                border-radius: 50%
                background: color2_bg
                color: var(--black)
                text-transform: uppercase
                font-weight: regular
                font-size: 14px

.prod
    &__shop
        .price-from, .price-to
            display: none